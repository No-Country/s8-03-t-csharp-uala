@inherits LayoutComponentBase


<MudThemeProvider Theme="_currentTheme" />
<MudSnackbarProvider />
<style>
    html, body{
        background:linear-gradient(rgba(112,182,235,0.85),rgba(28,122,192,0.85));
    }
</style>
<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <div class="d-flex flex-column mud-width-full">
        <MudPaper Elevation="25" Class="pa-8 justify-center rounded-lg"  Width="100%" MaxWidth="500px">
            <div class="d-flex justify-center">
                <MudImage ObjectPosition="ObjectPosition.Center" Style="width: 100%;" Src="" />
            </div>
            @Body
        </MudPaper>
    </div>
</MudContainer>

@code {
    private MudTheme _currentTheme = new MudBlazorAdminDashboard();
}